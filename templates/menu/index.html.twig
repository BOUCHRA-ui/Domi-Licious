                        </div>
                           <button class="btn btn-dark"><a href="{{ path('booking_new', {'id': menu.id}) }}">Réserver ce menu</a></button>
                             
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <h3>Menu</h3>
                            <p>
                            {{ menu.entree }}
                            <br> 
                            <hr>
                            {{ menu.plat }}
                            <br>
                            <hr>
                             {{ menu.plat }}
                             <hr>
                            {{ menu.dessert }}
                            </p>
                        
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
