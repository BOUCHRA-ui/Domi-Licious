{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}
{% block body %}
<div class="container">
    <div class="jumbotron">
    <section class="box-content box-3" id="staff">
            <div class="container">
                {% for commentaire in commentaires %}
                    <div class="row heading">
                        <div class="col-lg-12">
                            <div class="container">
                                <h2>{{ commentaire.email }}</h2>

                            </div>
                                <div class="container">
                                    <div class="row center">
                                        <div class="col-md-12">
                            </div>
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <h3> {{ commentaire.message }}</h3>
                                                    <h4><em>{{ commentaire.createdAt ? commentaire.createdAt|date('d-m-Y') : '' }}</em></h4>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="container">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ form_start(form) }}
                {{ form_row(form) }}
                    <button class="btn btn-danger">{{ button_label|default('Envoyer') }}</button>
                {{ form_end(form) }}
            </div>
                {% endif %}
        </section>
    </div>
</div>
{% endblock %}
