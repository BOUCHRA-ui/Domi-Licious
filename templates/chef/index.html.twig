{% extends 'base.html.twig' %}

{% block title %}Chef index{% endblock %}

{% block body %}
    <!-- <h1>Chef index</h1> -->

    <!-- TEST MISE EN PAGE-->

     <section class="box-content box-3" id="staff">
        <div class="container">
            {% for chef in chefs %}
            <div class="row heading">
                <div class="col-lg-12">
                    <h2>Cuisine : {{ chef.typeCuisine.title }}</h2>

                </div>
                <div class="row center">
                    <div class="col-md-6">
                        <div class="wrap-img">
                            <img src="{{ asset('uploads/images/chefs/') }}{{ chef.image }}" class="image-chef">
                        </div>
                        <ul class="list-inline social-buttons">
                            <!-- Lien icon bouton vers le menu + lien icon bouton booking TEST-->

                            <li>
                           <button><a href="{{ path('booking_new', {'id': chef.id}) }}">Réserver son menu</a></button>
                            </li>

                            <!-- FIN TEST -->
                            <li><a href="{{ path('chef_show', {'id': chef.id}) }}"><i class="fa fa-search"></i></a>
                            </li>


                        </ul>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <h3>Chef {{ chef.prenom }} {{ chef.nom }}</h3>
                            <p>{{ chef.presentation }}
                               </p>
                            <p>Menu de la base de données: <!--TODO path --> - <br>Nibh congue scripserit ne mel, pri ne amet mnesarchum.
                               .</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}