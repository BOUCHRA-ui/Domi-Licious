{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container">
    <h1 class="text-center">Register</h1>

    {{ form_start(registrationForm) }}
    <div class="form-row">
        <div class="form-group col-md-6">
            <label >Nom</label>
             {{ form_widget(registrationForm.nom, {'attr':{'placeholder':'Votre nom', 'class':'form-control'}}) }}
        </div>
        <div class="form-group col-md-6">
         <label >Pr√©nom</label>
            {{ form_widget(registrationForm.prenom, {'attr':{'placeholder':'Votre prenom', 'class':'form-control'}}) }}
        </div>
         <div class="form-group col-md-6">
            <label >Email</label>
             {{ form_widget(registrationForm.email, {'attr':{'placeholder':'Votre email', 'class':'form-control'}}) }}
        </div>
        <div class="form-group col-md-6">
         <label >Mot de passe</label>
            {{ form_widget(registrationForm.plainPassword, {'attr':{'placeholder':'Votre mot de passe', 'class':'form-control'}}) }}
        </div>
    
       <div class="form-check">
            {{ form_widget(registrationForm.agreeTerms, {'attr':{'placeholder':'agreeTerms', 'class':'form-check-input'}}) }}
            <label class="form-check-label" for="gridCheck">
            J'accepte les conditions
            </label>
        </div>
    </div>
        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
